<div class="row">
  <div class="col-lg-8">
    <div class="video-container">
      <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/<%= @video.identity %>?showinfo=0"
        allowfullscreen frameborder="0"></iframe>
    </div>
    <div class="video-title">
      <%= @video.title %>
    </div>
    <div class="video-title">

    </div>
    <br>
    <div class="video-buttons">
      <button type="button" class="btn btn-outline-danger"><i class="fa-solid fa-thumbs-up"></i> <i class="fa-solid fa-heart fa-beat"></i></button>
      <button type="button" class="btn btn-outline-secondary"><i class="fa-solid fa-thumbs-down"></i> <i class="fa-solid fa-heart-crack fa-shake"></i></button>
      <button type="button" class="btn btn-outline-secondary"><i class="fa-solid fa-sliders"></i></button>
    </div>
    <div class="video-description">
      <%= simple_format(@video.description) %>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="related-videos">
      <div class="list-group">
        <% @videos.each do |video|%>
          <% if @video != video %>
            <%= link_to video_path(video) do %>
              <div class="card mb-3">
                <div class="row g-0">
                    <img src="https://i.ytimg.com/vi/<%= video.identity %>/maxresdefault.jpg"
                      class="img-fluid rounded-start" alt="...">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title">
                        <%= video.title %>
                      </h5>
                      <p class="card-text">
                      <%= link_to user_channel_path(video.channel) do %>
                          <% if video.channel.avatar.attached?%>
                              <%= image_tag video.channel.avatar, class: "avatar-vid" %>
                          <% end %>
                          <%= video.channel.name %>
                      <% end %>
                      </p>
                      <p class="card-text"><small class="text-body-secondary">
                          <%= time_ago_in_words(video.created_at) %>
                        </small></p>
                    </div>
                </div>
              </div>
              <% end %>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>
</div>
