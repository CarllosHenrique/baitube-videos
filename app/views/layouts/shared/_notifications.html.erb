<% flash.each do |type, msg| %>
    <div class="toast align-items-center" role="alert" aria-live="assertive" aria-atomic="true" style="display: block;    display: block;
    position: fixed;
    top: 486px;
    right: 20px;
    background: #fff;">
    <div class="d-flex">
        <div class="toast-body">
            <strong><%= msg %></strong>
        </div>
        <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    </div>
<% end %>
